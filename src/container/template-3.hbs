

<header class='header'>
  <div>
    {{> logo}}
  </div>

  <nav class='header_nav '>
    <div class='header_nav_right'>
      {{> nav list=header}}
    </div>
  </nav>
</header>
   
{{#with hero}}
    <div class="hero">
      <div class="hero-content">
        <h1 class="hero-title">{{title}}</h1>
        <p class="hero-text">{{text}}</p>
      </div>
      <div class="hero-slider">
        <div class="hero-slider-icon hero-slider-l">{{left}}</div>
         <img src="{{photo}}" alt="hero img" class="hero-img"></img>
         <div class="hero-slider-icon hero-slider-r">{{right}}</div>
      </div>
     
    </div>
{{/with}}

<div class="model">
  {{hero.text}} {{hero.text}}
  {{!-- <img src="{{hero.photo}}" alt="hero img" class="model-img"></img> --}}
  <div class="model-text">{{hero.text}} {{hero.text}}</div>

</div>

