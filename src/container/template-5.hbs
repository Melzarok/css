

<header class='header'>
  <div>
    {{> logo}}
  </div>

  <nav class='header_nav '>
    <div class='header_nav_right'>
      {{> nav list=header}}
    </div>
  </nav>
</header>
   
<main class="main">
  {{#with messages}}
  <div class="messages">
    <h1 class="message-title">{{title}}</h1>

    {{#each list }}
      <div class="msg">
        <strong class="msg-name">{{name}}</strong>
        <div class="msg-text">{{message}}</div>
        <span class="msg-day">{{day}}</span>
      </div>
    {{/each}}
    
    <a href="#" class="messages-link">All messages</a>
  </div>
  <div class="form">Frm</div>
  {{/with}}

</main>

<div class="advantages">
  {{#each advantages}}
    <div>
      <strong>{{title}}</strong>
      <p>{{text}}</p>
    </div>
  {{/each}}
</div>

<footer class="footer">
  <div>
    {{> logo}}
    <span class='footer_copyright'>Copyright 2023-2024</span>
  </div>


  {{#each footer}}
    <div>
      <span class='footer_title'>{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>
