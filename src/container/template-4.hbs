

<header class='header'>
  <div>
    {{> logo}}
  </div>

  <nav class='header_nav '>
    <div class='header_nav_right'>
      {{> nav list=header}}
    </div>
  </nav>
</header>
   
{{#with main}}
    <div class="main">
      <div class="main-content">
        <h1 class="main-title">{{heading}}</h1>
        <p class="main-text">{{description}}</p>
        <div>
          <a href="{{href}}" class="main-button button">{{button}}</a>
        </div>
      </div>
      <img src="{{image}}" alt="main img" class="main-img">
      </img>
    </div>
{{/with}}

  <main class="featured">
    {{#each featured}}
      {{> cardFeatured data=this}}
    {{/each}}
  </main>
  
    <div class="form">
      {{#each actions}}
      <div class="form-content">
        <h3 class="form-title">{{heading}}</h3>
        <div class="form-action">
         <a href="{{url}}" class="button form-button">{{text}}</a>
        </div>
      </div>
      {{/each}}
    </div>

<footer class="footer">
  <div>
    {{> logo}}
    <span class='footer_copyright'>Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div>
      <span class='footer_title'>{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>
